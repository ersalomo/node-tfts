{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules/*"]
}
